* { margin: 0; padding: 0; }
body { background: white; font: 14px/1.4 sans-serif; }
.screen-reader-text { position: absolute; left: -9999px; top: -9999px; }
.clear { clear: both; }
.group:after { visibility: hidden; display: block; font-size: 0; content: " "; clear: both; height: 0; }
* html .group, *:first-child+html .group { zoom: 1; } /* First selector = IE6, Second Selector = IE 7 */
 
img { max-width: 100%; }
a { font-weight: bold; color: #4B8DF8; text-decoration: none; }
a:hover { color: #3F5765; }
p { margin: 0 0 20px 0; }
#wrapper h1, #wrapper h2, #wrapper h3, #wrapper h4 { margin: 25px 0 25px 0; font-weight: bold; color: #666; }
h1 { font-size: 2em; }
h2 { font-size: 1.2em; }
h3 { font-size: 1em; }
header {
	width: 100%;
	background: whiteSmoke;
	background: -webkit-gradient(radial,100 36,0,100 -40,120,from(#FAFAFA),to(#F1F1F1)),#F1F1F1;
	border-bottom: 1px solid #E5E5E5;
	height: 100px;
	padding-top: 25px;
	font-weight: bold;
}
header a {
	max-width: 960px;
	margin: 0 auto;
	display: block;
}
header h1 {
	color: #d54937;
	font-size: 40px;
	line-height: 41px;
}
header h2 {
	color: #666;
	font-size: 18px;
}
#wrapper {
		width: 960px;
		margin: 20px auto;
}

section {
	line-height: 26px;
	width: 675px;
	float: left;
}
section ul, section ol { margin: 0 0 20px 25px; }
section ol li { margin-left: 10px; }
section ul { list-style-type: square; }

blockquote {
	border: 1px solid rgba(0, 0, 0, 0.1);
	border-left: 2px solid #4B8DF8;
	background-color: #F7F7F7;
	padding: 15px 15px 0 0;
	width: 550px;
	margin: 30px 0 30px 50px;
	padding-left: 10px;
	color: #666;
	font-weight: lighter;
	font-style: italic;
}

ul, ol { margin: 0 0 10px 0; }

aside { width: 235px; padding: 25px; float: left; color: #666; }
aside p { text-align: justify; }
aside ul { margin: 0 0 25px 0; }
aside ul li { list-style: none; }
aside ul li a {
	color: #666;
	padding: 3px 10px;
	margin: 10px 0;
	display: block;
	border: 1px solid rgba(0, 0, 0, 0.1);
	text-align: center;
	background-color: transparent;
	background-image: linear-gradient(top,whiteSmoke,#F1F1F1);
	background-image: -moz-linear-gradient(top,whiteSmoke,#F1F1F1);
	background-image: -o-linear-gradient(top,whiteSmoke,#F1F1F1);
	background-image: -webkit-gradient(linear,left top,left bottom,from(whiteSmoke),to(#F1F1F1));
	background-image: -webkit-linear-gradient(top,whiteSmoke,#F1F1F1);
	background-image: -ms-linear-gradient(top,whiteSmoke,#F1F1F1);
}
aside ul li a:hover { 
	color: #666;
	-webkit-box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.2);
	box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.2);
}
aside iframe { margin-left: 21px; }
@media screen and (max-width: 960px) {
  body {
  	font-size: 18px;
  	line-height: 1.6em;
  }
  section {
  	max-width: 100%;
  	margin: 0 auto;
  }
  aside {
  	width: 80%;
  	margin: 0 auto;
  }
  #wrapper {
  	width: 100%;
  }
}